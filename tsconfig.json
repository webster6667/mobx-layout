{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@src/*": ["src/*"],
      "@common-types": ["src/types.ts"],
      "@shared/*": ["src/shared/*"],

      "@icons/*": ["src/assets/img/icons/*"],


      "@styles-const": ["src/shared/styles/const/index.ts"],
      "@app-theme": ["src/shared/styles/theme/index.ts"],
      "@mixins": ["src/shared/styles/mixins/index.ts"],
      "@pages": ["src/pages/index.ts"],
      "@grid": ["src/shared/ui-kit/grid/index.ts"],
      "@typography": ["src/shared/ui-kit/typography/index.ts"],
      "@modal/*": ["src/shared/ui-kit/modal/*"],
      "@ui-kit/*": ["src/shared/ui-kit/*"],

      "@hook": ["src/hooks/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "custom.d.ts",
    "styled.d.ts"
  ],
  "exclude": ["node_modules", "build"]
}